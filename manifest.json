{
  "name": "Emojinsert",
  "version": "0.1",
  "description": "Insert emojis anywhere!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "*://*.unicode.org/"
  ],
  "background": {
    "scripts": [
      "node_modules/localstoragedb/localstoragedb.js",
      "background/database.js",
      "background/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "emoji-selector/emoji-selector-util.js",
        "emoji-selector/emoji-selector-elements.js",
        "emoji-selector/emoji-selector.js"
      ],
      "css" : [
        "emoji-selector/emoji-selector.css"
      ]
    }
  ],
  "commands": {
    "show_emoji_selector": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      },
      "description": "Make background green"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "web_accessible_resources": [
    "emoji-selector/emoji-selector.css"
  ],
  "manifest_version": 2
}